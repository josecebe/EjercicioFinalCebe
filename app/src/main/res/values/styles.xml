<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryIndigo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkIndigo</item>
        <item name="colorAccent">@color/colorAccentPink</item>

        <item name="colorButtonNormal">@color/colorAccentPink</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryIndigo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkIndigo</item>
        <item name="colorAccent">@color/colorAccentPink</item>

        <item name="android:textColorPrimary">#d8000000</item>
        <item name="colorControlNormal">#ffffffff</item>
        <item name="android:textColorHint">#bfffffff</item>
        <item name="colorButtonNormal">@color/colorAccentIndigo</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryIndigo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkIndigo</item>
        <item name="colorAccent">@color/colorAccentPink</item>
        <item name="colorButtonNormal">@color/colorAccentPink</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle"></item>
    </style>
</resources>