<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        ><!--android:onClick="viewViaje"-->
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageCiudad"
            android:src="@drawable/s_madrid"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <TextView
            android:id="@+id/origenDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageCiudad"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:textColor="#212121"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageCiudad"
            android:layout_below="@id/origenDestino"
            android:text="Clase Turista, 5 pasajeros"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:textColor="#727272"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idViaje"
            android:text="ID"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:id="@+id/divider0"/>
</LinearLayout>